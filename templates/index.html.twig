{% extends 'base.html.twig' %}

        {% block title %}CRE | Login{% endblock %}

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        {% endblock %}

        {% block body %}

            {% block main %}

                <div class="body container-fluid">
                    <div class="container div" id="container">

                        {# {{ form_start(form) }}

                        {{ form_errors(form) }} #}

                        {{ form_start(form) }}
                        
                        <div class="form-container sign-up-container">
                            <form action="post">
                                <h1>Create Account</h1>
                                <div class="social-container">
                                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                                </div>
                                <span>OR</span>

                                {{ form(form) }}

                                <p id="signIn">Already have an account? <b>Sign In here</b></p>
                            </form>
                        </div>

                        {{ form_end(form) }}

                        <div class="form-container sign-in-container">
                            <form action="post">
                                <h1>Sign in</h1>
                                <div class="social-container">
                                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                                </div>
                                <span>OR</span>
                                <input type="text" value="" id="username-sign-in" placeholder="Username" name="username" required/>
                                <input type="password" placeholder="Password" name="password" requried />
                                <button class="cancel-btn">CANCEL</button>
                                <button class="register-btn">SIGN IN</button>

                                <p id="signUp">Don't have an account? <a>Sign Up!</a></p>
                            </form>
                        </div>

                        <div class="overlay-container">
                            <div class="overlay">
                                <div class="overlay-panel overlay-left">
                                    <h1>Become part of the pack, today.</h1>
                                    <p>Become a wildlife enthusiast with us, join in on the fun blogs and exciting news about the wildlife</p>
                                
                                </div>
                                <div class="overlay-panel overlay-right">
                                    <h1>Welcome back to the wild.</h1>
                                    <p>Login and tell us about your journey in the wildlife!</p>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {# {{ form_end(form) }} #}

        {% endblock main %}

    {% endblock body %}    

    {% block javascripts %}
        <script src="{{ asset('js/script.js') }}"></script>
    {% endblock javascripts %}