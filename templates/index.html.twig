{% extends 'base.html.twig' %}

        {% block title %}CRE | Login{% endblock %}

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        {% endblock %}

        {% block body %}

            {% block main %}

                <div class="body container-fluid">
                    <div class="container div" id="container">

                        {# {{ form_start(form) }}

                        {{ form_errors(form) }} #}
                        
                        <div class="form-container sign-up-container">
                            <form action="post">
                                <h1>Create Account</h1>
                                <div class="social-container">
                                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                                </div>
                                <span>OR</span>

                                {# {{ form_widget(form.username) }}
                                {{ form_errors(form.username) }} #}

                                <input type="text" name="username[username]" placeholder="Username" required/>

                                {# {{ form_widget(form.email) }}
                                {{ form_errors(form.email) }} #}

                                <input type="email" name="email[emai]"  placeholder="Email Address" required/>

                                {# {{ form_widget(form.password) }}
                                {{ form_errors(form.password) }} #}

                                <input type="password" name="password[password]"  placeholder="Password" required/>

                                {# {{ form_widget(form.image) }}
                                {{ form_errors(form.image) }} #}

                                <input type="file" id="myFile" name="filename[filename]">

                                {# {{ form_widget(form.register) }}
                                {{ form_errors(form.register) }} #}

                                <button class="register-btn-right" name="submit" type="submit">SIGN UP</button>

                                <p id="signIn">Already have an account? <b>Sign In here</b></p>
                            </form>
                        </div>
                        <div class="form-container sign-in-container">
                            <form action="#">
                                <h1>Sign in</h1>
                                <div class="social-container">
                                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                                </div>
                                <span>OR</span>
                                <input type="text" id="username-sign-in" placeholder="Username" name="username[username]" required/>
                                <input type="password" placeholder="Password" name="password[password]" requried />
                                <button class="cancel-btn">CANCEL</button>
                                <button class="register-btn">SIGN IN</button>

                                <p id="signUp">Don't have an account? <a>Sign Up!</a></p>
                            </form>
                            </form>
                        </div>
                        <div class="overlay-container">
                            <div class="overlay">
                                <div class="overlay-panel overlay-left">
                                    <h1>Become part of the pack, today.</h1>
                                    <p>Become a wildlife enthusiast with us, join in on the fun blogs and exciting news about the wildlife</p>
                                
                                </div>
                                <div class="overlay-panel overlay-right">
                                    <h1>Welcome back to the wild.</h1>
                                    <p>Login and tell us about your journey in the wildlife!</p>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {# {{ form_end(form) }} #}

        {% endblock main %}

    {% endblock body %}    

    {% block javascripts %}
        <script src="{{ asset('js/script.js') }}"></script>
    {% endblock javascripts %}